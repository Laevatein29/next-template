{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "es2016",
		"noImplicitAny": false,
		"sourceMap": false,
		"declaration": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		// "noUnusedParameters": true,
		"strict": true,
  },
  "include": ["vite.config.ts", "./src/scripts/**/*.ts"]
}
